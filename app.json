{
    "id": "nl.sietse.homey.fhem",
    "name": {
        "en": "FHEM",
        "nl": "FHEM"
    },
    "version": "0.6.0",
    "compatibility": ">= 1.5.x",
    "sdk": 2,
    "author": {
        "name": "Sietse Visser",
        "email": "sietse@sietse.nl"
    },
    "images": {
      "large": "./assets/images/large.png",
      "small": "./assets/images/small.png"
    },
    "category": [ "tools", "appliances" ],
    "description": {
        "en": "FHEM interface app for Homey",
        "nl": "FHEM interface app voor Homey"
    },
    "flow": {
        "actions": [
            {
                "id": "FHEMlight_set_energy",
                "title": {
                    "en": "Set energy",
                    "nl": "Zet energie"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=fhem-light"
                    },
                    {
                        "name": "energy",
                        "type": "number"
                    }
                ]
            },
            {
                "id": "FHEMlight_set_meter",
                "title": {
                    "en": "Set meter",
                    "nl": "Zet meter"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=fhem-light"
                    },
                    {
                        "name": "meter",
                        "type": "number"
                    }
                ]
            },
            {
                "id": "FHEMsocket_set_energy",
                "title": {
                    "en": "Set energy",
                    "nl": "Zet energie"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=fhem-socket"
                    },
                    {
                        "name": "energy",
                        "type": "number"
                    }
                ]
            },
            {
                "id": "FHEMsocket_set_meter",
                "title": {
                    "en": "Set meter",
                    "nl": "Zet meter"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=fhem-socket"
                    },
                    {
                        "name": "meter",
                        "type": "number"
                    }
                ]
            },
            {
                "id": "FHEMthermostat_set_measure_temperature",
                "title": {
                    "en": "Set measured temperature",
                    "nl": "Zet gemeten temperatuur"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=fhem-thermostat"
                    },
                    {
                        "name": "temperature",
                        "type": "number"
                    }
                ]
            }
        ]
    },
    "drivers": [
        {
            "id": "fhem-light",
            "name": {
                "en": "FHEM light",
                "nl": "FHEM lamp"
            },
            "images": { 
                "large": "./drivers/fhem-light/assets/images/fhemlight-large.png",
                "small": "./drivers/fhem-light/assets/images/fhemlight-small.png"
            },
            "class": "light",
            "capabilities": [
                "dim",
                "onoff"
            ],
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices" 
                }
            ]
        },
        {
            "id": "fhem-socket",
            "name": {
                "en": "FHEM socket",
                "nl": "FHEM stopcontact"
            },
            "images": { 
                "large": "./drivers/fhem-socket/assets/images/fhemsocket-large.png",
                "small": "./drivers/fhem-socket/assets/images/fhemsocket-small.png"
            },
            "class": "socket",
            "capabilities": [
                "dim",
                "onoff"
            ],
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices" 
                }
            ]
        },
        {
            "id": "fhem-thermostat",
            "name": {
                "en": "FHEM thermostat",
                "nl": "FHEM thermostaat"
            },
            "images": { 
                "large": "./drivers/fhem-thermostat/assets/images/fhemthermostat-large.png",
                "small": "./drivers/fhem-thermostat/assets/images/fhemthermostat-small.png"
            },
            "class": "thermostat",
            "capabilities": [
                "target_temperature",
                "measure_temperature"
            ],
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices" 
                }
            ]
        },
        {
            "id": "fhem-windowcoverings",
            "name": {
                "en": "FHEM windowcoverings",
                "nl": "FHEM zonwering"
            },
            "images": { 
                "large": "./drivers/fhem-windowcoverings/assets/images/fhemwindowcoverings-large.png",
                "small": "./drivers/fhem-windowcoverings/assets/images/fhemwindowcoverings-small.png"
            },
            "class": "windowcoverings",
            "capabilities": [
                "dim",
                "onoff"
            ],
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices" 
                }
            ]
        },
        {
            "id": "fhem-sensor",
            "name": {
                "en": "FHEM sensor",
                "nl": "FHEM sensor"
            },
            "images": { 
                "large": "./drivers/fhem-sensor/assets/images/fhemsensor-large.png",
                "small": "./drivers/fhem-sensor/assets/images/fhemsensor-small.png"
            },
            "class": "sensor",
            "capabilities": [
                "measure_temperature",
                "measure_humidity",
                "measure_power",
                "measure_luminance",
                "meter_power",
                "alarm_motion",
                "alarm_contact"
            ],
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices" 
                }
            ]
        }
    ]
}
